<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hojas"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="6dp"
            android:layout_height="233dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="82dp"
                android:layout_height="162dp"
                android:layout_alignTop="@+id/etContra"
                android:layout_toLeftOf="@+id/etEmail"
                android:layout_toStartOf="@+id/etEmail"
                android:layout_weight="1"
                app:srcCompat="@drawable/candado" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="82dp"
                android:layout_height="172dp"
                android:layout_alignTop="@+id/etEmail"
                android:layout_toLeftOf="@+id/etEmail"
                android:layout_toStartOf="@+id/etEmail"
                android:layout_weight="1"
                app:srcCompat="@drawable/mail" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="131dp"
            android:layout_height="254dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:orientation="vertical"></LinearLayout>

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:hint="E-mail"
                android:inputType="textPersonName"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="vertical"></LinearLayout>

            <EditText
                android:id="@+id/etContra"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                android:hint="ContraseÃ±a"
                android:inputType="textPassword"
                android:textColor="@android:color/black"/>

            <Button
                android:id="@+id/btnAceptar"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="208dp"
                android:layout_height="59dp"
                android:layout_weight="1"
                android:text="Ingresar"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>